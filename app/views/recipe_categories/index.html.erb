<h1>Categor&iacute;as</h1>

<br>

<p>
  <%= link_to "Agregar Categor&iacute;a".html_safe, new_recipe_category_path, class: 'btn btn-primary' %>
  <%= link_to "Men&uacute;".html_safe, "/admin", class: 'btn btn-default' %>
</p>

<br>

<table class="table">

  <tbody>
    <% @recipe_categories.each do |category| %>
      <tr>
        <td class="category-image"><a href="<%= category.image %>" target="_blank"><img src="<%= category.image %>"></a></td>
        <td class="category-label"><%= link_to category.name, category %></td>
        <td><%= link_to "Editar", edit_recipe_category_path(category) %></td>
        <td><%= link_to "Eliminar", category, method: :delete, data: { confirm: "Est&aacute; seguro que desea eliminar la categor&iacute;a #{category.name}?".html_safe } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
